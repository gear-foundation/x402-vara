{
  "name": "x402-vara",
  "version": "0.1.3",
  "description": "x402 payment protocol implementation for Vara Network",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "x402",
    "vara",
    "payment",
    "micropayment",
    "blockchain"
  ],
  "author": "btwiuse",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^16.4.8",
    "@polkadot/extension-dapp": "^0.62.1",
    "@polkadot/keyring": "^13.5.6",
    "@polkadot/types": "^16.4.8",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "axios": "^1.10.0",
    "express": "^5.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@polkadot/api": "^16.4.8",
    "@polkadot/extension-dapp": "^0.62.1",
    "axios": "^1.10.0",
    "express": "^5.1.0"
  }
}
